{
    "name": "yeyo-dev/design-patterns",
    "type": "project",
    "description": "A collection of design patterns implemented in PHP",
    "require": {
        "php": "^8.4"
    },
    "autoload": {
        "psr-4": {
            "DesignPatterns\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    },
    "scripts": {
        "test": "phpunit --testdox --colors=always"
    }
}
